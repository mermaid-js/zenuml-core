{
  "name": "sequence",
  "scopeName": "source.sequence",
  "fileTypes": [".seq"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.sequence",
      "match": "\\b(as|async|await|catch|const|critical|else|finally|forEach|foreach|group|if|in|loop|new|nil|null|opt|par|readonly|ref|return|section|static|title|try|var|while)\\b|\\B(@Starter|@starter)\\b"
    },
    {
      "name": "string.quoted.double.sequence",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.sequence",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.sequence"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.sequence"
            }
          }
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.sequence",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
